# ECommerce Microservices Environment Configuration
# Copy this file to .env and modify values as needed

# Database Configuration
DB_SERVER=sqlserver
DB_PORT=1433
DB_USER=sa
DB_PASSWORD=YourStrong@Passw0rd

# JWT Configuration
JWT_SECRET_KEY=YourSuperSecretKeyThatIsAtLeast32CharactersLong
JWT_ISSUER=ECommerceApp
JWT_AUDIENCE=ECommerceUsers
JWT_EXPIRY_HOURS=24

# Service Ports
USER_SERVICE_PORT=7000
PRODUCT_SERVICE_PORT=7002
ORDER_SERVICE_PORT=7001
API_GATEWAY_PORT=5100
SQL_SERVER_PORT=1433

# Environment
ASPNETCORE_ENVIRONMENT=Development

# API Gateway Configuration
GATEWAY_USER_SERVICE_URL=http://userservice:7000
GATEWAY_PRODUCT_SERVICE_URL=http://productservice:7002
GATEWAY_ORDER_SERVICE_URL=http://orderservice:7001